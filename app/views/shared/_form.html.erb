<div id="form">
  <%= form_for(@post) do |form| %>
  <% if @post.errors.any? %>
      <div>
        <ul>
          <% @post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form.label :title %>
    <%= form.text_field :title %>

    <%= form.label :body %>
    <%= form.text_area :body %>

    <%= form.submit %>
      </div>
  <% end %>
</div>

